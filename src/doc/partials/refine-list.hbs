                    Filter
                </a>
            </div>
        </div>
    </div>

    <!-- A panel with more than 5 filters -->
    <div class="panel">
        <div class="panel-heading">
            <h4 class="panel-title">More than 5 filters</h4>
        </div>

        <!-- The container of the 5 first filters -->
        <div class="panel-collapse">
            <div class="list-group">
                <!-- The 5 first filters -->
                <a href="#" class="list-group-item [active]">
                    <i class="icon-radio"></i>
                    <!-- if active --><i class="icon-radio-check"></i><!-- /if -->
                    Filter
                </a>
            </div>
        </div>

        <!-- The container of the other filters -->
        <div id="refine-list-1" class="panel-collapse collapse"
             role="tabpanel" aria-labelledby="refine-list-footer-1" aria-expanded="false">
            <div class="list-group">
                <!-- All the other filters -->
                <a href="#" class="list-group-item">
                    <i class="icon-radio"></i>
                    <!-- if checked --><i class="icon-radio-check"></i><!-- /if -->
                    Filter
                </a>
            </div>
        </div>

        <!-- The container for the show more and show less link -->
        <div class="panel-footer" role="tab" id="refine-list-footer-1">

            <a data-toggle="collapse" href="#refine-list-1"
               aria-expanded="false" aria-controls="refine-list-1">
                <!-- The two strings are swapped automatically -->
                <span class="refine-list-more">Show more</span>
                <span class="refine-list-less">Show less</span>
