    <!-- A panel with less than 5 filters -->
    <div class="panel">
        <div class="panel-heading">
            <h4 class="panel-title">Less than 5 filters</h4>
        </div>
        <div class="panel-collapse">
            <div class="list-group">
                <a href="#" class="list-group-item [active]">
